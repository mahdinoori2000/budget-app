  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  
<% end %>
